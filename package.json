{
    "name": "xiaobao-blog",
    "version": "1.0.0",
    "description": "*Minima is a one-size-fits-all Jekyll theme for writers*. It's Jekyll's default (and first) theme. It's what you get when you run `jekyll new`.",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf dist/* && rm -rf _site/*",
        "clean:ps": "Remove-Item ./dist/*",
        "watch": "webpack --watch",
        "build": "webpack --progress",
        "profile": "webpack --profile --json > stats/stats.json",
        "start": "jekyll serve --port 8888",
        "dev": "jekyll serve --port 8888 --host 192.168.1.6",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "emojify.js": "^1.1.0",
        "normalize.css": "^7.0.0"
    },
    "devDependencies": {
        "css-loader": "^0.28.9",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.6",
        "json-loader": "^0.5.7",
        "node-sass": "^4.7.2",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.1",
        "uglifyjs-webpack-plugin": "^1.1.6",
        "url-loader": "^0.6.2",
        "webpack": "^3.10.0",
        "webpack-bundle-analyzer": "^2.9.2"
    }
}
